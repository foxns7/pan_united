package challenge2;

import java.util.LinkedList;


public class Group {

	LinkedList<Integer> numbers = new LinkedList<>();
	int sum; 
	int id;
	
	public Group(int id) {
		System.out.println("Created new group with id "+id);
	}
	
	public void add(Integer number) {
		System.out.print("Before add to "+id+" id: ");
		if(!numbers.isEmpty()) {
			for(Integer i: numbers) {
				System.out.print(i);
			}
			System.out.println();
		}else {
			System.out.println();
			System.out.println(id+" id Empty");
		}
		
		numbers.addLast(number);
		sum += (int) number;

		System.out.print("After add to "+id+" id: ");
		for(Integer i: numbers) {
			System.out.print(i);
		}
		System.out.println();
	}
	
	public Integer removeFirst() {
		Integer first = numbers.removeFirst();
		sum -= (int) first;
		return first;
	}
	
	public int sum() {
		return sum;
	}
	
}